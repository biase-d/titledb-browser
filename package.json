{
	"name": "nx-performance-ui",
	"private": true,
	"version": "3.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build:index": "node scripts/build-index.js",
		"build": "vite build",
		"preview": "vite preview",
		"dev:seed": "npm run build:index",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "standard \"src/**/*.{js,ts,svelte}\"",
		"lint:fix": "standard \"src/**/*.{js,ts,svelte}\" --fix",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.0.1",
		"@sveltejs/adapter-vercel": "^5.8.1",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@typescript-eslint/parser": "^8.38.0",
		"dotenv": "^17.2.1",
		"drizzle-kit": "^0.31.4",
		"eslint": "^8.57.1",
		"eslint-plugin-svelte": "^3.11.0",
		"simple-git": "^3.28.0",
		"standard": "^17.1.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-eslint-parser": "^1.3.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@auth/sveltekit": "^1.10.0",
		"@fontsource-variable/caveat": "^5.2.6",
		"@fontsource/inter": "^5.2.6",
		"@octokit/rest": "^22.0.0",
		"@resvg/resvg-js": "^2.6.2",
		"chart.js": "^4.5.0",
		"drizzle-orm": "^0.44.4",
		"idb": "^8.0.3",
		"json-stable-stringify": "^1.3.0",
		"lodash-es": "^4.17.21",
		"postgres": "^3.4.7",
		"satori": "^0.16.2",
		"satori-html": "^0.3.2"
	},
	"standard": {
		"parser": "svelte-eslint-parser",
		"plugins": [
			"svelte"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser",
			"extraFileExtensions": [
				".svelte"
			]
		},
		"ignore": [
			"build/",
			".svelte-kit/"
		]
	}
}
