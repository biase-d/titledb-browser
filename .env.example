# Database Configuration
# Use the connection string for your local or remote Postgres/Neon database
POSTGRES_URL="postgres://postgres:postgres@localhost:5432/main"
DATABASE_TYPE="postgres" # or "d1"

# Storage Configuration (R2)
R2_ACCOUNT_ID="your_account_id"
R2_ACCESS_KEY_ID="your_access_key"
R2_SECRET_ACCESS_KEY="your_secret_key"
R2_BUCKET_NAME="your_bucket_name"
R2_PUBLIC_DOMAIN="https://your-r2-domain.com"
STORAGE_PATH="performance-ui"

# Storage Configuration (Vercel Blob - Fallback)
BLOB_READ_WRITE_TOKEN="vercel_blob_token"

# GitHub Integration
GITHUB_BOT_TOKEN="your_github_pat"
GITHUB_ID="oauth_client_id"
GITHUB_SECRET="oauth_client_secret"
AUTH_SECRET="auth_secret_random_string"

# Feature Flags & System
node_env="development"
